<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LetterApp.WEB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LetterApp.WEB.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid" style="background-color: rgb(174, 214, 241);">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Diary World</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="diary" asp-action="index">Diary</a>
                        </li>
                    </ul>
                    <div>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <div >
                            <h3 style="color:white;">@User.Identity.Name</h3>
                            </div>
                            <div style="margin-left:10px">
                            <a href="/home/logout">Çıkış</a>
                            </div>
                        
                        }
                        else
                        {
                            <a href="/home/Login">Login</a>
                            <a href="/user/register">Register</a>
                        }
                    
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="margin-left:10px">
        <main role="main" class="pb-3">
            <div class="container">
            
                <div class="row">
                    <div class="col-md-2 d-flex flex-column" style="border: outset; height: 80vh;background-color: rgb(174, 214, 241);">
                        <h1>Menu</h1>
                        <br />
                        <h5><a href="/diary">Diaries</a></h5>
                        <h5><a href="#">Profile</a></h5>
                        <div class="flex-grow-1"></div>
                    </div>
                    <div class="col-md-2">
                    </div>
                    <div class="col-md-8">

                        @RenderBody()
                    </div>
                    <div class="col-md-2">

                    </div>
                </div>
            </div>
            

         
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - LetterApp.WEB - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
