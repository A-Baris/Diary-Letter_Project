@model DiaryEditVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="edit" asp-controller="diary" method="post">
    <input asp-for="Id" value="@Model.Id" hidden />
    <input asp-for="UserId" value="@Model.UserId" hidden />
    <div class="form-group">

        <label asp-for="Header" class="form-label"></label>
        <input type="text" asp-for="Header" value="@Model.Header" class="form-control" />
        <span asp-validation-for="Header" class="text-danger"></span>
    </div>
    <div class="form-group">

        <label asp-for="Description" class="form-label"></label>
        <input type="text" asp-for="Description" value="@Model.Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
     <div class="form-group text-center" style="margin-top:5px">
         <button class="btn btn-primary" type="submit">Güncelle</button>
     </div>
   
</form>

