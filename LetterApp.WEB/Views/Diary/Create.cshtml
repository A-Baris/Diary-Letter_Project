@model DiaryCreateVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userId = ViewBag.UserId;
}
<div class="row justify-content-center">

    <div class="col-md-8">
     
        <form asp-action="create" asp-controller="diary" method="post">
            <input asp-for="UserId" value="@userId" type="hidden" />
            <div class="form-group">
                <label asp-for="Header" class="control-label"></label>
                <input asp-for="Header" class="form-control" />
                <span asp-validation-for="Header" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="text-center" style="margin-top:10px">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>